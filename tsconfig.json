{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",

    // Needed as per Webpack TS config (See https://webpack.js.org/configuration/configuration-languages/#typescript)
    "module": "CommonJS", 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
